{
  "name": "express-plate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "digitalstage（http://digitalstage.jp/）",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev src/server/app.ts",
    "serve": "node build/server/app.js",
    "start": "npm run serve",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc && cpx src/server/views/*.ejs build/server/views && rimraf build/client && rimraf build/types",
    "build:client": "webpack --config webpack.config.js",
    "lint": "npm run lint:ts && npm run lint:scss",
    "lint:ts": "eslint src/**/*.ts",
    "lint:scss": "stylelint src/**/*.scss",
    "fmt": "npm run fmt:ts && npm run fmt:scss",
    "fmt:ts": "prettier-eslint --write src/**/*.ts",
    "fmt:scss": "prettier-stylelint --write src/**/*.scss",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.ts": [
      "prettier-eslint --write",
      "git add"
    ],
    "*.scss": [
      "prettier-stylelint --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$"
  },
  "prettier": {},
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.44",
    "@types/jest": "^24.0.18",
    "@types/jquery": "^3.3.31",
    "@types/node": "^12.7.8",
    "@types/sequelize": "^4.28.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "autoprefixer": "^9.6.1",
    "cpx": "^1.5.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "sequelize-cli": "^5.5.1",
    "stylelint": "^11.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-prettier": "^1.1.1",
    "stylelint-scss": "^3.11.1",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.8.1",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "jquery": "^3.4.1",
    "mysql2": "^1.7.0",
    "reset-css": "^4.0.1",
    "sequelize": "^6.29.0",
    "supertest": "^4.0.2"
  }
}
